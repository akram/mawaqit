{% extends 'base.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-md-6">
            <h3>{{ 'mosque.form.streamUrl.title'|trans }}</h3>
            <div class="alert alert-info mt-2">
                <p><i class="fa fa-info-circle"></i> {{ 'mosque.form.streamUrl.subTitle'|trans }}</p>
                <p>{{ 'mosque.form.streamUrl.info1'|trans|raw }}</p>
                {% if not form.vars.data.isMosque %}
                    <p>{{ 'mosque.form.streamUrl.info2'|trans|raw }}</p>
                {% else %}
                    <p>{{ 'mosque.form.streamUrl.info3'|trans|raw }}</p>
                {% endif %}
            </div>

            <h5></h5>
            {{ form(form) }}
            <div>
                <a href="{{ asset('bundles/app/img/rtsp.me.png') }}">
                    {#<img src="{{ asset('bundles/app/img/rtsp.me.png') }}" width="100%">#}
                </a>
            </div>
        </div>
    </div>
{% endblock %}