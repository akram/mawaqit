{% extends "base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block body %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h3>{{ 'resetting.request.submit'|trans }}</h3>
            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST"
                  class="fos_user_resetting_request">

                <div class="form-group">
                    <label for="username">{{ 'form.email'|trans }}</label>
                    <input class="form-control" type="text" id="username" name="username" required="required"/>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">{{ 'resetting.request.submit'|trans }}</button>
                </div>
            </form>
        </div>
    </div>
{% endblock body %}
