{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <h3>{{ 'registration.registration'|trans({}, 'messages') }}</h3><br>
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        {{ form_row(form.email) }}
        <div class="alert alert-info"><i
                    class="fas fa-info-circle"></i> {{ 'registration.please_enter_right_email'|trans({}, 'messages') }}
        </div>
        {{ form_row(form.plainPassword) }}
        <div class="mb-4 pwd-rules" style="font-size: 85%; line-height: 0">
            <p class="text-danger" id="rule_1"><i
                        class="fas fa-times-circle"></i> {{ 'registration.password_rule_1'|trans({}, 'messages') }}</p>
            <p class="text-danger" id="rule_2"><i
                        class="fas fa-times-circle"></i> {{ 'registration.password_rule_2'|trans({}, 'messages') }}</p>
            <p class="text-danger" id="rule_3"><i
                        class="fas fa-times-circle"></i> {{ 'registration.password_rule_3'|trans({}, 'messages') }}</p>
            <p class="text-danger" id="rule_4"><i
                        class="fas fa-times-circle"></i> {{ 'registration.password_rule_4'|trans({}, 'messages') }}</p>
            <p class="text-danger" id="rule_5"><i
                        class="fas fa-times-circle"></i> {{ 'registration.password_rule_5'|trans({}, 'messages') }}</p>
        </div>
        {{ form_row(form.tou) }}
        {{ form_row(form.recaptcha) }}
        <div class="mt-3">
            <button id="validate-btn" type="submit" class="btn btn-primary"
                    disabled="disabled">{{ 'validate'|trans({}, 'messages') }}</button>
            <a href="{{ path("fos_user_security_login") }}"
               class="btn btn-danger">{{ 'cancel'|trans({}, 'messages') }}</a>
        </div>
        {{ form_end(form) }}
    </div>
</div>