{% extends "base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title  'Connection' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-offset-4 col-md-4">
                <div class="text-center">

                    <form action="{{ path("fos_user_security_check") }}" method="post" style="margin: auto;">
                        <h2 class="form-signin-heading">{{ 'layout.login'|trans }}</h2>
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                        {% endif %}

                        <div class="form-group">
                            <input type="email" id="username" name="_username" value="{{ last_username }}"
                                   class="form-control"
                                   placeholder="{{ 'form.email'|trans }}" required autofocus/>
                        </div>

                        <div class="form-group">
                            <input type="password" id="password" name="_password"
                                   placeholder="{{ 'security.login.password'|trans }}"
                                   class="form-control" required/>
                        </div>

{#                        <div class="form-group">#}
{#                            {{ form_row(recaptcha) }}#}
{#                        </div>#}

                        <div class="form-group">
                            <input type="checkbox" id="remember_me" name="_remember_me" class="not-toggle" checked/>
                            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                        </div>

                        <div class="form-group">
                            <button type="submit" id="_submit" name="_submit"
                                    class="btn btn-primary btn-block text-capitalize">{{ 'security.login.submit'|trans }}</button>
                        </div>

                        <div class="form-group">
                            <a href="{{ path('fos_user_resetting_request') }}">{{ 'layout.forgot_password'|trans }}</a>
                        </div>

                        {% if error %}
                            <div class="text-danger text-capitalize"
                                 style="padding: 10px">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
