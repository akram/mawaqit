{% extends "base.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <h3>{{ 'change_password.submit'|trans }}</h3>
            {% if app.request.query.has('security-check') %}
                {% block navbar '' %}
                <div class="alert alert-warning"><i class="fa fa-info-circle"></i>
                    <b>{{ 'password_change.alert'|trans({}, 'messages') }}</b>
                </div>
            {% endif %}

            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
            {{ form_widget(form) }}
            {% include 'partial/_password_rules.html.twig' %}
            <div>
                <button type="submit" class="btn btn-primary">{{ 'change_password.submit'|trans }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock body %}

{% block additional_javascripts %}
    {% javascripts
        '@AppBundle/Resources/public/js/password.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}