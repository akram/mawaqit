{% trans_default_domain 'FOSUserBundle' %}

<div class="row col-md-4">
    <h3>{{ 'change_password.submit'|trans }}</h3>

    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
    {{ form_widget(form) }}
    <div class="mb-4 pwd-rules" style="font-size: 85%; line-height: 0">
        <p class="text-danger" id="rule_1"><i
                    class="fas fa-times-circle"></i> {{ 'registration.password_rule_1'|trans({}, 'messages') }}</p>
        <p class="text-danger" id="rule_2"><i
                    class="fas fa-times-circle"></i> {{ 'registration.password_rule_2'|trans({}, 'messages') }}</p>
        <p class="text-danger" id="rule_3"><i
                    class="fas fa-times-circle"></i> {{ 'registration.password_rule_3'|trans({}, 'messages') }}</p>
        <p class="text-danger" id="rule_4"><i
                    class="fas fa-times-circle"></i> {{ 'registration.password_rule_4'|trans({}, 'messages') }}</p>
        <p class="text-danger" id="rule_5"><i
                    class="fas fa-times-circle"></i> {{ 'registration.password_rule_5'|trans({}, 'messages') }}</p>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">{{ 'change_password.submit'|trans }}</button>
    </div>
    {{ form_end(form) }}
</div>